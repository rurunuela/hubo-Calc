<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:padding="3dip" >


        <ImageView
                android:id="@+id/list_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="top"
                android:contentDescription="@string/app_name"
                android:src="@drawable/contrat" />

    </LinearLayout>

    <!-- Rightend Arrow -->
    <ImageView
            android:id="@+id/imageView1"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:gravity="center_vertical"/>

    <!-- City-->
    <TextView
            android:id="@+id/contratTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom ="9dip"
            android:text="Contrat "
            android:textColor="#040404"
            android:textSize="25dip"
            android:textStyle="bold"
            android:typeface="sans" android:layout_alignTop="@+id/thumbnail" android:layout_toRightOf="@+id/thumbnail"/>

    <!-- Weather Information-->

    <TextView
            android:id="@+id/contratDebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:text="du ??"
            android:textColor="#343434"
            android:textSize="15dip"

            android:layout_alignStart="@+id/contratTitre"
            android:layout_alignTop="@+id/estRenseigner"
            android:layout_alignBottom="@+id/contratTitre"/>


    <TextView
            android:id="@+id/estRenseigner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_alignTop="@+id/contratTitre"
            android:layout_toLeftOf="@+id/imageView1"
            android:text=""
            android:textSize="30dip" />

</RelativeLayout>